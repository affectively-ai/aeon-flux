{
  "name": "@affectively/aeon-flux-cli",
  "version": "0.2.0",
  "description": "CLI for Aeon Flux - The CMS IS the website",
  "type": "module",
  "bin": {
    "aeon": "./src/index.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@affectively/aeon-pages-runtime": "workspace:*",
    "@affectively/aeon-build": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "aeon",
    "flux",
    "cms",
    "framework",
    "cloudflare",
    "d1",
    "wasm",
    "collaborative"
  ],
  "author": "Affectively",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/affectively/aeon-flux"
  }
}
